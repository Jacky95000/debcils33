{% extends 'base.html.twig' %}

{% block title %}Liste des rendez-vous{% endblock %}

{% block body %}
<h2>Liste des rendez-vous</h2>

<table class="table-rdv">
  <thead>
    <tr>
      <th>Client</th>
      <th>Date</th>
      <th>Heure</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for rdv in rendezvous %}
      <tr>
        <td>{{ rdv.user.email }}</td>
        <td>{{ rdv.date|date('d/m/Y') }}</td>
        <td>{{ rdv.heure|date('H:i') }}</td>
        <td>
          <form method="post" action="{{ path('rendezvous_delete', { id: rdv.id }) }}" onsubmit="return confirm('Supprimer ce rendez-vous ?')" style="display:inline;">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">
  <button class="btn btn-danger">🗑️ Supprimer</button>
</form>

        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="4">Aucun rendez-vous pour l’instant.</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
